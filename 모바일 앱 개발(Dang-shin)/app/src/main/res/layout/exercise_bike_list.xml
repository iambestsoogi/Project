<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="10dp"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/list_bike"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:stretchColumns="*"
                    android:showDividers="middle"
                    android:divider="@drawable/line_table_1"
                    >

                    <!--                    표의 첫 번째 줄-->
                    <TableRow
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:showDividers="middle"
                        android:divider="@drawable/line_table_5"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="시간"
                            android:textSize="18dp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="거리"
                            android:textSize="18dp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="소모칼로리"
                            android:textSize="18dp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:layout_weight="1"
                            />
                    </TableRow>

                    <!--                    표의 두 번째 줄-->
                    <TableRow
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:showDividers="middle"
                        android:divider="@drawable/line_table_5">
                        <TextView
                            android:id="@+id/exercise_bike_time"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="00:00분"
                            android:textSize="18dp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:layout_weight="1" />
                        <TextView
                            android:id="@+id/exercise_bike_distance"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="0km"
                            android:textSize="18dp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/exercise_bike_kcal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="0kcal"
                            android:textSize="18dp"
                            android:textColor="#000000"
                            android:layout_weight="1"/>
                    </TableRow>
                </TableLayout>
            </FrameLayout>
        </LinearLayout>

        <!--        마지막 밑줄-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/line7"
            android:layout_gravity="center"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>